<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_margin="16dp"
    android:background="#E8E8E8">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_marginTop="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="64dp"
                        android:id="@+id/name"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martha Shaka"/>
                    <TextView
                        android:id="@+id/mom_age"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="30 years"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_below="@+id/textView"
                android:id="@+id/profilePic"
                android:background="@drawable/shape_circle"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:elevation="10px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/unfpa_anc"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#e8e8e8">
            <android.support.v7.widget.CardView
                android:background="#F3F3F3"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#D85751"/>
                <RelativeLayout
                    android:id="@+id/details"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/textSpouse"
                        android:textColor="#7c322f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umekutana na mama mjamzito? "/>
                    <RadioGroup
                        android:layout_below="@+id/textSpouse"
                        android:id="@+id/visit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        >

                        <RadioButton
                            android:id="@+id/visit_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:textSize="12sp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/visit_yes"
                            android:layout_marginLeft="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/yes"/>

                    </RadioGroup>


                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="#F3F3F3"
                android:layout_marginBottom="8dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_pregnancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                android:visibility="visible"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#99D9DE"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/information"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#236c71"
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: "/>
                    <TextView
                        android:layout_marginLeft="40dp"
                        android:layout_alignTop="@+id/textDate"
                        android:layout_toRightOf="@+id/textDate"
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-Jan-2017"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/textDate"
                        android:layout_alignLeft="@+id/textDate"
                        android:textColor="#236c71"
                        android:id="@+id/textToken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Token: "/>

                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/date"
                        android:layout_marginLeft="32dp"
                        android:layout_toRightOf="@+id/textToken"
                        android:id="@+id/token"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:hint="ingiza token"
                        android:inputType="number"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_alignLeft="@+id/textToken"
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/token"
                        android:textColor="#236c71"
                        android:id="@+id/textObservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments: "/>

                    <EditText
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/textObservation"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/token"
                        android:id="@+id/observation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="andika unchoona kuhusu hali/afya ya mama"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_marginTop="4dp"
                        android:padding="2dp"
                        android:layout_below="@+id/observation"
                        android:gravity="center_horizontal"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taarifa"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <Button
                    android:layout_marginLeft="48dp"
                    android:id="@+id/save"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#99D9DE"
                    android:text="Tunza"
                    android:textColor="#fff"
                    />

                <Button
                    android:layout_marginRight="48dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cancel_action"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#D85751"
                    android:text="Futa"
                    android:textColor="#fff"
                    />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>