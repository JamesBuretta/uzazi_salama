                            <TextView
                                android:id="@+id/textView18"
                                style="@style/CustomFontTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Number of Alive Children"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/textLiveChildren"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/anc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_event_anc"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textView8"
                                style="@style/CustomFontTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Had Still Birth"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/textStillBirth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/history_of_mr_label"
                                style="@style/CustomFontTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Number of Successful Birth"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/textSuccessfulBirths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/history_of_sb_label"
                                style="@style/CustomFontTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Number of Previous Fertility"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/textPreviousFertility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/history_of_pregnancy_label"
                                style="@style/CustomFontTextViewStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="Pregnancy in last 2 years"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/textPregnancyInLast2Yrs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/text_black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
