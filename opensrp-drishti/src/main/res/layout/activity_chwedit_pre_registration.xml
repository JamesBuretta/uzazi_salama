<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.ei.opensrp.drishti.Fragments.AncRegister1stFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/layout_referal_form" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/tbLayout"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/outlayer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="#a8f5ce0b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:text="Chunguza Vidokezo Vifuatavyo Kwa Mteja"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="0dp"
                        android:text="Weka alama (&#x2713;) panapohusika."
                        android:textAllCaps="false"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox2weekCough"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Kikohozi zaidi ya wiki mbili"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkboxfever"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Homa zaidi ya wiki mbili"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkboxWeightLoss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Kupungua uzito"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />



                    <CheckBox
                        android:id="@+id/checkboxSevereSweating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Kutokwa na jasho usiku zaidi ya wiki mbili"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkboxBloodCough"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Kukohoa makohozi yenye mchanganyiko na damu"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkboxLostFollowup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="Kisukari"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout

                    android:visibility="gone"
                    android:id="@+id/extra"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:alpha="0.8"
                        android:src="@drawable/ic_account_box"
                        android:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="namba ya CTC "
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:hint="jaza namba kama mteja anayo"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/hint_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textColor="#a12727"
            android:text="TUNZA"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:clickable="false" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
