<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Chunguza Vidokezo Vifuatavyo Kwa Mama."
            android:textAllCaps="true"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:text="Weka alama (&#x2713;) panapohusika."
            android:textAllCaps="false"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkbox4orMorePregnancies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone"
            android:text="Mimba 4 au zaidi"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkbox1stPregAbove35Yrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Mimba ya kwanza zaidi ya miaka 35"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkboxHeightBelow150"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone"
            android:text="Kimo chini ya cm 150"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <!--<CheckBox-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingBottom="12dp"-->
        <!--android:paddingTop="12dp"-->
        <!--android:text="Kuzaa mtoto mfu/kifo cha mtoto mchanga (wk 1)"-->
        <!--android:textColor="@color/secondary_text"-->
        <!--android:textSize="14sp" />-->

        <CheckBox
            android:id="@+id/checkboxCSDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Kuzaa kwa kupasuliwa au vakyum"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkboxKilemaChaNyonga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Kilema cha nyonga"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkboxBleedingOnDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Kutoka damu nyingi baada ya kujifungua"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkboxKondoKukwama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Kondo la nyuma kukwama"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:alpha="0.8"
                android:src="@drawable/ic_lightbulb_on"
                android:tint="@color/primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Mshauri mama aende kituo cha afya au hospitali kujifungua"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>