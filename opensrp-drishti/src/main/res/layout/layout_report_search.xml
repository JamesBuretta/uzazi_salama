<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Chagua aina ya ripoti kutokana na taarifa zifautazo"
            android:textAllCaps="true"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Kundi la kina mama"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupMotherType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp">

            <RadioButton
                android:id="@+id/radioTypeANC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Waja Wazito"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioTypePNC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Waliojifungua"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutRiskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:text="Kuhusu vidokezo vya hatari"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupRiskStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/radioYesOnRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Walio hatarini"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioNotOnRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Walio salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutDeliveryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:text="Matokeo ya kujifungua"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroupDeliveryResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/radioSuccessfulDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Waliojifungua salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioUnsuccessfulDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Hawakujifungua salama"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>
        <!--<fr.ganfra.materialspinner.MaterialSpinner-->
        <!--android:id="@+id/spinnerType"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_marginTop="16dp"-->

        <!--app:ms_arrowColor="@color/accent"-->
        <!--app:ms_arrowSize="14dp"-->
        <!--app:ms_baseColor="@color/accent"-->
        <!--app:ms_enableFloatingLabel="false"-->
        <!--app:ms_hint="Chagua waja wazito/walio jifungua"-->
        <!--app:ms_hintColor="@color/hint_text"-->
        <!--app:ms_multiline="false"-->
        <!--app:ms_thickness="1dp"-->
        <!--app:paddingEnd="16dp"-->
        <!--app:paddingStart="16dp" />-->

        <View
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:clickable="false"
            android:visibility="invisible" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>