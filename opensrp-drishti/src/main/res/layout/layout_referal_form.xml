<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOMU YA RUFAA YA MTEJA"
            android:textSize="24sp"
            android:textColor="#000"
            android:gravity="center"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/coat_of_arms_of_tanzania"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A. TAARIFA ZA MTEJA"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/layoutDatePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/layoutDatePick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="16dp"
            android:paddingRight="0dp">

            <ImageView
                android:id="@+id/iconCalendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="1dp"
                android:src="@drawable/ic_calendar_today"
                android:tint="@color/primary" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:text="dd mmm yyyy"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:paddingBottom="24dp"
        android:paddingTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText

                android:id="@+id/editTextClientName"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:hint="Jina kamili la mteja"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />


            <EditText

                android:id="@+id/editTextDiscountId"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:hint="Namba ya mteja ya CBHS"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextMotherAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:hint="Umri wa Mama"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Jinsi"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal"
                android:paddingRight="16dp">
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Me"
                    android:textColor="@color/primary_text" />
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Ke"
                    android:textColor="@color/primary_text" />


            </RadioGroup>
            <LinearLayout
                android:id="@+id/layoutEditPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingLeft="0dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:hint="Namba ya simu"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/hint_text" />

                <ImageView
                    android:id="@+id/iconPhone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_cellphone_android"
                    android:tint="@color/primary" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextKataAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:hint="Kata"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/editTextKijiji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:hint="Kijiji"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/editTextKijitongoji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:hint="Kijitongoji/Mtaa"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextVillageLeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:hint="Jina la mwenyekiti wa kijitongoji"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinnerService"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                app:ms_arrowColor="@color/accent"
                app:ms_arrowSize="14dp"
                app:ms_baseColor="@color/accent"
                app:ms_enableFloatingLabel="false"
                app:ms_hint="Aina za huduma"
                app:ms_hintColor="@color/hint_text"
                app:ms_multiline="false"
                app:ms_thickness="1dp"
                app:paddingEnd="16dp"
                app:paddingStart="16dp" />
            <EditText
                android:id="@+id/reason_for_referral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:hint="Sababu ya Rufaa"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hint_text"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextClinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:hint="Jina la kliniki aliyoshauriwa kwenda"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />



        <TextView
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. TAARIFAZA ANAYETOA RUFAA"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jina la anayetoa Rufaa:"/>

            <TextView
                android:id="@+id/provider_name"
                android:textStyle="bold"
                android:layout_marginLeft="136dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Martha shaka"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jina la shirika / Kituo cha aliyetoa rufaa:"/>

            <TextView
                android:id="@+id/provider_support_group"
                android:textStyle="bold"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kwembe Support Group"/>
        </LinearLayout>









    </LinearLayout>

</LinearLayout>