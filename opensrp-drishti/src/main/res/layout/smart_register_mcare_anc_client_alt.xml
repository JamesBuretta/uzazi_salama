<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="208dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clipChildren="true"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_sunset_ocean" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:background="#01579B" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardDP"
                        android:layout_width="64dp"
                        android:layout_height="64dp"

                        app:cardBackgroundColor="#80B3E5FC"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">

                        <ProgressBar
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:progressTint="@color/accent" />

                        <ImageView
                            android:id="@+id/imageProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Mother Name"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miaka 00"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPhysicalAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Address"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:text="Expected Delivery Date"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="0dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_calendar_today"
                        android:tint="@android:color/holo_blue_light" />

                    <TextView
                        android:id="@+id/textEDD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Jan 2222"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:text="Last Visit Date"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="0dp">

                    <ImageView
                        android:id="@+id/iconLastVisitDate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_calender_check"
                        android:tint="@android:color/holo_blue_light" />

                    <TextView
                        android:id="@+id/textLastVisitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Jan 2222"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:text="Next Visit Date"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="0dp">

                    <ImageView
                        android:id="@+id/iconNextVisitDate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_calendar_description"
                        android:tint="@android:color/holo_red_light" />

                    <TextView
                        android:id="@+id/textNextVisitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Jan 2222"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>