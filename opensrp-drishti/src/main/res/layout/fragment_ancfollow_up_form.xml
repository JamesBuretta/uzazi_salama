<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:background="@color/mdtp_white">

    <include  layout="@layout/ancdetail_nav_bar" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#e5e5e5"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:text="Chunguza Vidokezo Vifuatavyo Kwa Mama.Weka alama (&#x2713;) panapohusika."
                android:textAllCaps="true"
                android:textColor="@color/light_blue"
                android:textSize="16sp" />


            <CheckBox
                android:id="@+id/checkbox_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="bp 140/90 au zaidi"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_hb_below_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="hb chini ya 60%"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_albumin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="albumin kwenye mkojo"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_sugar_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="sukari kweny mkojo"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_umri_wa_mimba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="umri wa mimba zaidi ya wiki 40"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_baby_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="mtoto kufia tumboni"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_mlalo_wa_mtotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="mtoto amelala vibaya baada ya wiki 40"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkbox_kimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="kimo cha mimba kikubwa/kidogo zaidi kuliko umri wake"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:text="Mama ameshauriwa azalie wapi"
                android:textAllCaps="true"
                android:textColor="@color/light_blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/facility"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="jina la hospital" />

            <Button
                android:layout_marginTop="32dp"
                android:id="@+id/submit"
                android:background="@color/light_blue"
                android:textColor="#fff"
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Tunza" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>