<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="0"
    android:padding="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"

        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarStyle" />




    <android.support.v7.widget.CardView
        android:id="@+id/cardReportFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Ministry Of Health"/>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/report_title"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Report Title :- List ya mama wajawazito"/>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/facility_title"
                android:layout_below="@+id/report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Facility Name :- Mt meru hospital"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/starting_date_title"
                android:layout_below="@+id/facility_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Starting Date :- 8th Jan 2017"/>
            <TextView
                android:id="@+id/ending_date_title"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/facility_title"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Ending Date :- 22nd Oct 2017"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardReportDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">
        <TableLayout   android:id = "@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:padding="8dp">

            <TableRow  android:layout_height="wrap_content">
                <TextView
                    android:padding="4dp"
                    android:id="@+id/sn"
                    android:text="SN#"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/mothers_name"
                    android:background="@drawable/cell_shape_header"
                    android:text="Jina La mama"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/vllage"
                    android:text="Village"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/textPhone"
                    android:text="Mobile #"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/spousePhone"
                    android:text="Spouse No"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/risk"
                    android:text="Risk Status"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/App1"
                    android:text="App1"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/App2"
                    android:text="App2"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/App3"
                    android:text="App3"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/App4"
                    android:text="App4"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="4dp"
                    android:id="@+id/edd"
                    android:text="EDD"
                    android:background="@drawable/cell_shape_header"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>

