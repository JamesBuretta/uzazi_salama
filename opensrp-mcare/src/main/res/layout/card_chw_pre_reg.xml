<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="2dp"
        card_view:cardCornerRadius="0dp">
        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:background="@drawable/shape_circle"
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/unfpa_anc"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"/>
            <TextView
                android:layout_alignBottom="@+id/profilePic"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/textDate"
                android:layout_toRightOf="@+id/profilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDD:"/>

            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_toRightOf="@+id/textDate"
                android:layout_alignTop="@+id/textDate"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.noPadding"
                android:text="08 Jan 17"
                android:textSize="14sp"
                android:id="@+id/edd"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <TextView
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/profilePic"
                android:layout_marginLeft="0dp"
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "/>
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_alignTop="@+id/textName"
                android:layout_toRightOf="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding"
                android:text="Martha Shaka"
                android:id="@+id/name"/>
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_alignBottom="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#870909"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding"
                android:text="High"
                android:id="@+id/risk"/>
            <TextView
                android:layout_toLeftOf="@+id/risk"
                android:layout_alignTop="@+id/risk"
                android:layout_marginRight="0dp"
                android:id="@+id/textRisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk: "/>

            <TextView
                android:layout_alignLeft="@+id/textName"
                android:layout_below="@+id/name"
                android:id="@+id/textVisited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Visited: "/>
            <org.ei.opensrp.view.customControls.CustomFontTextView
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/textVisited"
                android:layout_alignTop="@+id/textVisited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#268709"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Small.NoPadding"
                android:text="Once"
                android:id="@+id/visited"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>