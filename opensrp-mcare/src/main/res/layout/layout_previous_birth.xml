<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Habari Kuhusu Uzazi Uliotangulia"
        android:textAllCaps="true"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextPregCount"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:hint="Mimba ya ngapi"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextBirthCount"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="Amezaa mara ngapi"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextChildrenCount"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="Watoto walio hai"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/hint_text"
        android:textSize="14sp" />

</LinearLayout>