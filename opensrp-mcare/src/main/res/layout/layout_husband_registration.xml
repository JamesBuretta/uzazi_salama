<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutHusbandGerForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHSterilized"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Is husband sterilized?"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupHusbandSterilized"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioYesHSterilized"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:checked="false"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioNoHSterilized"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:checked="false"
                android:text="No" />

            <RadioButton
                android:id="@+id/radioDontKnowHSterilized"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:checked="false"
                android:text="Don't know" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWomanId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Husband Name"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextWomanName"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:hint="Enter woman's name"
            android:inputType="textPersonName"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text="Which of the following IDs does the woman have?"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkboxNatId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:checked="false"
            android:minWidth="192dp"
            android:text="National ID"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkboxBirthId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:checked="false"
            android:minWidth="192dp"
            android:text="Birth Registration ID"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutWomanNatId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Woman's National ID Number"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNatIdNumber"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:hint="Enter National ID number"
            android:inputType="number|text"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutWomanBirthId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Woman's Birth ID Number"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextBirthIdNumber"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:hint="Enter Birth ID number"
            android:inputType="number|text"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>